<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magestore_Rewardpoints::Reward_Points" title="Reward Points" sortOrder="30">
                    <resource id="Magestore_Rewardpoints::Earning" title="Earning" sortOrder="10">
                        <resource id="Magestore_RewardpointsRule::Earning_Catalog" title="Catalog Earning Rules" sortOrder="20" />
                        <resource id="Magestore_RewardpointsRule::Earning_Sales" title="Shopping Cart Earning Rules" sortOrder="30" />
                        <resource id="Magestore_RewardpointsRule::Earning_Individual" title="Manage Earning Points By Product" sortOrder="40" />
                    </resource>
                    <resource id="Magestore_Rewardpoints::Spending" title="Spending" sortOrder="20">
                        <resource id="Magestore_RewardpointsRule::Spending_Catalog" title="Catalog Spending Rules" sortOrder="20" />
                        <resource id="Magestore_RewardpointsRule::Spending_Sales" title="Shopping Cart Spending Rules" sortOrder="30" />
                        <resource id="Magestore_RewardpointsRule::Spending_Individual" title="Manage Spending Points By Product" sortOrder="40" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>